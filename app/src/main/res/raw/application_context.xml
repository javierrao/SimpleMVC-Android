<?xml version="1.0" encoding="utf-8"?>
<application-context>
    <!-- action 配置 -->
    <!-- ${} 中的内容表示引用资源文件中定义的值 -->
    <action-config>
        <action id="${ids_action_user_login}" name="com.android.javier.demo.action.LoginAction">
            <notify id="${ids_notify_user_login}" name="execute_user_login"/>
        </action>
    </action-config>

    <!-- 任务配置 -->
    <task-config>
        <task id="${ids_task_user_login}" name="com.android.javier.demo.tasks.LoginTask">
            <type>http</type>
            <meta-data>json</meta-data>
        </task>

        <task id="${ids_task_set_user}" name="com.android.javier.demo.tasks.SetUserInfoTask">
            <type>db</type>
            <meta-data/>
        </task>
    </task-config>

    <!-- 数据源配置 -->
    <dataSource>
        <name>simple_mvc.db</name>
        <version>1</version>
        <backup_when_need_upgrade>true</backup_when_need_upgrade>
        <daos>
            <dao id="${ids_dao_user}" name="com.android.javier.demo.dao.UserDao" />
        </daos>
    </dataSource>
</application-context>