<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle_bg"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/num6_pwd_one_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/point_blue"
            android:visibility="invisible" />

        <TextView
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="@color/gray" />

        <ImageView
            android:id="@+id/num6_pwd_two_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/point_blue"
            android:visibility="invisible" />

        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="@color/gray" />

        <ImageView
            android:id="@+id/num6_pwd_three_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/point_blue"
            android:visibility="invisible" />

        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="@color/gray" />

        <ImageView
            android:id="@+id/num6_pwd_four_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/point_blue"
            android:visibility="invisible" />

        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="@color/gray" />

        <ImageView
            android:id="@+id/num6_pwd_five_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/point_blue"
            android:visibility="invisible" />

        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="@color/gray" />

        <ImageView
            android:id="@+id/num6_pwd_six_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/point_blue"
            android:visibility="invisible" />

        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="@color/gray" />
    </LinearLayout>

    <EditText
        android:id="@+id/num6_edit_ecurity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:cursorVisible="false"
        android:longClickable="false"
        android:inputType="numberPassword"
        android:maxLength="6" />

</FrameLayout>